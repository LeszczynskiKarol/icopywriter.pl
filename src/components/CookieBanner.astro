---
/**
 * CookieBanner.astro
 * GDPR-compliant cookie consent banner with Google Consent Mode v2
 * For icopywriter.pl
 *
 * GTM: GTM-TDLW7G3C (contains Tag Google with GA4: G-NFCFZ2NJLG)
 *
 * Architecture:
 * 1. Consent Mode v2 defaults set to DENIED (before any scripts)
 * 2. GTM loads and respects consent mode — Tag Google won't fire until granted
 * 3. On user action: consent update → GTM picks up new signals automatically
 *
 * No separate gtag.js needed — GTM handles GA4 via Tag Google
 */
---

<!-- Cookie Banner -->
<div
  id="cookie-banner"
  class="cookie-banner"
  role="dialog"
  aria-modal="true"
  aria-labelledby="cookie-title"
  hidden
>
  <div class="cookie-banner__backdrop"></div>

  <div class="cookie-banner__container">
    <div class="cookie-banner__card">

      <!-- Header -->
      <div class="cookie-banner__header">
        <h2 id="cookie-title" class="cookie-banner__title">Szanujemy Twoją prywatność</h2>
        <p class="cookie-banner__desc">
          Używamy plików cookies, aby zapewnić prawidłowe działanie strony
          i&nbsp;analizować ruch za pomocą Google Analytics. Możesz zdecydować,
          na które kategorie wyrażasz zgodę.
        </p>
      </div>

      <!-- Cookie Categories (collapsible) -->
      <div id="cookie-details" class="cookie-banner__details" hidden>
        <div class="cookie-banner__categories">
          <!-- Necessary -->
          <div class="cookie-cat">
            <div class="cookie-cat__info">
              <div class="cookie-cat__icon cookie-cat__icon--necessary">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
              </div>
              <div>
                <span class="cookie-cat__name">Niezbędne</span>
                <span class="cookie-cat__hint">Wymagane do działania strony</span>
              </div>
            </div>
            <div class="cookie-toggle cookie-toggle--locked">
              <div class="cookie-toggle__track cookie-toggle__track--on"></div>
              <div class="cookie-toggle__thumb cookie-toggle__thumb--on"></div>
            </div>
          </div>

          <!-- Analytics -->
          <div class="cookie-cat">
            <div class="cookie-cat__info">
              <div class="cookie-cat__icon cookie-cat__icon--analytics">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
              </div>
              <div>
                <span class="cookie-cat__name">Analityczne</span>
                <span class="cookie-cat__hint">Google Analytics — statystyki odwiedzin</span>
              </div>
            </div>
            <label class="cookie-toggle">
              <input type="checkbox" id="cookie-analytics" class="cookie-toggle__input" />
              <div class="cookie-toggle__track"></div>
              <div class="cookie-toggle__thumb"></div>
            </label>
          </div>

          <!-- Marketing -->
          <div class="cookie-cat">
            <div class="cookie-cat__info">
              <div class="cookie-cat__icon cookie-cat__icon--marketing">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
              </div>
              <div>
                <span class="cookie-cat__name">Marketingowe</span>
                <span class="cookie-cat__hint">Remarketing i personalizacja reklam</span>
              </div>
            </div>
            <label class="cookie-toggle">
              <input type="checkbox" id="cookie-marketing" class="cookie-toggle__input" />
              <div class="cookie-toggle__track"></div>
              <div class="cookie-toggle__thumb"></div>
            </label>
          </div>
        </div>

        <p class="cookie-banner__policy">
          Więcej informacji w&nbsp;<a href="/polityka-prywatnosci/">Polityce Prywatności</a>.
        </p>
      </div>

      <!-- Actions -->
      <div class="cookie-banner__actions">
        <button id="cookie-toggle-details" class="cookie-banner__toggle-btn" type="button">
          <span id="toggle-text">Dostosuj preferencje</span>
          <svg id="toggle-icon" class="cookie-banner__chevron" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
        </button>

        <div class="cookie-banner__buttons">
          <button id="cookie-reject" class="cookie-btn cookie-btn--secondary" type="button">
            Tylko niezbędne
          </button>
          <button id="cookie-accept-selected" class="cookie-btn cookie-btn--secondary" type="button" hidden>
            Zapisz wybrane
          </button>
          <button id="cookie-accept-all" class="cookie-btn cookie-btn--primary" type="button">
            Akceptuj wszystkie
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ═══════════════════════════════════════════════════════════════
     CONSENT MODE v2 + GTM
     Must be the FIRST scripts on the page — before GTM loads
     ═══════════════════════════════════════════════════════════════ -->
<script is:inline>
(function() {
  // ═══════════════════════════════════════════
  // Configuration
  // ═══════════════════════════════════════════
  var COOKIE_NAME = 'icopywriter_consent';
  var GTM_ID = 'GTM-TDLW7G3C';
  var CONSENT_MAX_AGE_DAYS = 365;

  // ═══════════════════════════════════════════
  // Google Consent Mode v2 — DENIED by default
  // ═══════════════════════════════════════════
  window.dataLayer = window.dataLayer || [];
  function gtag() { dataLayer.push(arguments); }

  gtag('consent', 'default', {
    'ad_storage': 'denied',
    'ad_user_data': 'denied',
    'ad_personalization': 'denied',
    'analytics_storage': 'denied',
    'functionality_storage': 'granted',
    'personalization_storage': 'denied',
    'security_storage': 'granted',
    'wait_for_update': 500
  });

  gtag('set', 'url_passthrough', true);
  gtag('set', 'ads_data_redaction', true);

  // ═══════════════════════════════════════════
  // DOM (deferred)
  // ═══════════════════════════════════════════
  var banner, details, toggleBtn, toggleText, toggleIcon;
  var acceptAllBtn, acceptSelectedBtn, rejectBtn;
  var analyticsCheckbox, marketingCheckbox;
  var detailsVisible = false;

  // ═══════════════════════════════════════════
  // Consent storage with expiry
  // ═══════════════════════════════════════════
  function getConsent() {
    try {
      var raw = localStorage.getItem(COOKIE_NAME);
      if (!raw) return null;
      var c = JSON.parse(raw);
      if (c.timestamp) {
        var age = Date.now() - new Date(c.timestamp).getTime();
        if (age > CONSENT_MAX_AGE_DAYS * 86400000) {
          localStorage.removeItem(COOKIE_NAME);
          return null;
        }
      }
      return c;
    } catch (e) { return null; }
  }

  function setConsent(consent) {
    localStorage.setItem(COOKIE_NAME, JSON.stringify({
      necessary: true,
      analytics: consent.analytics,
      marketing: consent.marketing,
      timestamp: new Date().toISOString(),
      version: '1.0'
    }));
  }

  // ═══════════════════════════════════════════
  // Update Google Consent signals
  // GTM picks these up automatically
  // ═══════════════════════════════════════════
  function updateGoogleConsent(consent) {
    var a = consent.analytics ? 'granted' : 'denied';
    var m = consent.marketing ? 'granted' : 'denied';

    gtag('consent', 'update', {
      'ad_storage': m,
      'ad_user_data': m,
      'ad_personalization': m,
      'analytics_storage': a,
      'personalization_storage': m
    });

    dataLayer.push({
      'event': 'consent_update',
      'consent_analytics': consent.analytics,
      'consent_marketing': consent.marketing
    });
  }

  // ═══════════════════════════════════════════
  // Load GTM — always (it respects consent mode)
  // Tag Google inside GTM won't fire until
  // analytics_storage is 'granted'
  // ═══════════════════════════════════════════
  function loadGTM() {
    if (document.getElementById('gtm-script')) return;

    var s = document.createElement('script');
    s.id = 'gtm-script';
    s.async = true;
    s.src = 'https://www.googletagmanager.com/gtm.js?id=' + GTM_ID;
    document.head.appendChild(s);

    dataLayer.push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
  }

  // ═══════════════════════════════════════════
  // Banner UI
  // ═══════════════════════════════════════════
  function showBanner() {
    banner.removeAttribute('hidden');
    banner.offsetHeight; // force reflow
    banner.classList.add('visible');
    document.body.style.overflow = 'hidden';
  }

  function hideBanner() {
    banner.classList.remove('visible');
    document.body.style.overflow = '';
    setTimeout(function() { banner.setAttribute('hidden', ''); }, 300);
  }

  function toggleDetails() {
    detailsVisible = !detailsVisible;
    if (detailsVisible) {
      details.removeAttribute('hidden');
      acceptSelectedBtn.removeAttribute('hidden');
    } else {
      details.setAttribute('hidden', '');
      acceptSelectedBtn.setAttribute('hidden', '');
    }
    toggleIcon.style.transform = detailsVisible ? 'rotate(180deg)' : '';
    toggleText.textContent = detailsVisible ? 'Ukryj opcje' : 'Dostosuj preferencje';
  }

  // ═══════════════════════════════════════════
  // Consent handlers
  // ═══════════════════════════════════════════
  function handleAcceptAll() {
    var c = { analytics: true, marketing: true };
    setConsent(c); updateGoogleConsent(c); loadGTM(); hideBanner();
  }

  function handleAcceptSelected() {
    var c = { analytics: analyticsCheckbox.checked, marketing: marketingCheckbox.checked };
    setConsent(c); updateGoogleConsent(c); loadGTM(); hideBanner();
  }

  function handleReject() {
    var c = { analytics: false, marketing: false };
    setConsent(c); updateGoogleConsent(c); loadGTM(); hideBanner();
  }

  // Global: reopen settings (footer link)
  window.openCookieSettings = function() {
    var c = getConsent();
    if (c) {
      analyticsCheckbox.checked = c.analytics;
      marketingCheckbox.checked = c.marketing;
    }
    if (!detailsVisible) toggleDetails();
    showBanner();
  };

  // ═══════════════════════════════════════════
  // Init
  // ═══════════════════════════════════════════
  function init() {
    banner = document.getElementById('cookie-banner');
    details = document.getElementById('cookie-details');
    toggleBtn = document.getElementById('cookie-toggle-details');
    toggleText = document.getElementById('toggle-text');
    toggleIcon = document.getElementById('toggle-icon');
    acceptAllBtn = document.getElementById('cookie-accept-all');
    acceptSelectedBtn = document.getElementById('cookie-accept-selected');
    rejectBtn = document.getElementById('cookie-reject');
    analyticsCheckbox = document.getElementById('cookie-analytics');
    marketingCheckbox = document.getElementById('cookie-marketing');

    if (!banner) return;

    var consent = getConsent();
    if (consent) {
      updateGoogleConsent(consent);
      loadGTM();
    } else {
      showBanner();
      // Load GTM even without consent — it respects consent mode defaults
      loadGTM();
    }

    toggleBtn.addEventListener('click', toggleDetails);
    acceptAllBtn.addEventListener('click', handleAcceptAll);
    acceptSelectedBtn.addEventListener('click', handleAcceptSelected);
    rejectBtn.addEventListener('click', handleReject);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

